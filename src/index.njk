<div class="flex-1"></div>

<section class="mt-10">

  <div class="flex items-end justify-between gap-4">
    <h2 class="text-xl font-semibold">News</h2>
    <a class="text-sm font-medium text-slate-700 hover:text-slate-900 dark:text-white/80 dark:hover:text-white" href="/blog/"
      >Všetky posty →</a
    >
  </div>

  <ul class="mt-4 grid gap-3">
    {% set posts = collections.blogPosts | reverse %}
    {% for post in posts | limit(4) %}
    <li class="rounded-sm border border-slate-200/70 bg-white p-5 shadow-sm dark:border-white/20 dark:bg-brand">
      <a class="text-base font-semibold text-slate-900 hover:text-slate-700 dark:text-slate-900 dark:hover:text-slate-700" href="{{ post.url }}">
        {{ post.data.title }}
      </a>
      <p class="mt-1 text-sm text-slate-500 dark:text-slate-700">
        <time datetime="{{ post.date | dateISO }}">{{ post.date | dateSK }}</time>
      </p>
    </li>
    {% endfor %}
  </ul>
</section>
